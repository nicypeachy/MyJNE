<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header Logo -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="91dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logomyjne" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="We found your driver! "
        android:layout_below="@+id/logo_image"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppinsbold"
        android:textSize="16dp"
        />

    <!-- Driver Info -->
    <LinearLayout
        android:id="@+id/driver_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_kurir_avatar"
            android:layout_marginEnd="16dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:elevation="2dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andrew"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D 6549 AM"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ic_chat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_chat"
            android:tint="@android:color/black" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/driver_info"
        android:layout_marginTop="16dp"
        android:background="#F7F9FA" />

    <!-- Delivery Time -->
    <LinearLayout
        android:id="@+id/deliverytime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your delivery time"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_tracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliverytime"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Step 1: Order Created -->
        <LinearLayout
            android:id="@+id/ly_ordercreated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_order_created"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_ordercreated"
                android:contentDescription="Order Created" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order created"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/line_order_created"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <!-- Step 2: Finding Driver -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_finding_driver"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_findingdriver"
                android:contentDescription="Finding Driver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finding driver"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/line_finding_driver"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <!-- Step 3: Driver Assigned -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_driver_assigned"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_driverassigned"
                android:contentDescription="Driver Assigned" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver OTW"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/line_driver_assigned"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <!-- Step 4: Order Picked Up -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_order_picked_up"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_orderpickedup"
                android:contentDescription="Picked Up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picked up"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/line_order_picked_up"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/progress_tracker"
        android:layout_marginTop="20dp"
        android:background="#F7F9FA" />

    <LinearLayout
        android:id="@+id/payment_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">


        <!-- Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 5.000"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_selesai"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:text="Cancel"
        android:textColor="@android:color/black"
        android:background="@drawable/button_shape_background" />

</RelativeLayout>

