<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/formpickup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormPickupActivity"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title_pickup"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="-35dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Pickup"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_lokasiasal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_pickup"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Lokasi Pengirim"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_lokasi_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_lokasiasal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal"
                android:padding="12dp">

                <Spinner
                    android:id="@+id/spinner_lokasiasal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppinsregular"
                    android:spinnerMode="dropdown"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_lokasitujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_lokasiasal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Lokasi Tujuan"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_lokasitujuan_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_lokasiasal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal"
                android:padding="12dp">

                <Spinner
                    android:id="@+id/spinner_lokasitujuan"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppinsregular"
                    android:spinnerMode="dropdown"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_lokasitujuan_input"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Nama Pengirim"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_namapengirim_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_note"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/et_namalengkap"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan Nama Pengirim"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_nomortelepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_namapengirim_input"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Nomor Telepon"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/phone_input_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_nomortelepon"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="21dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_flag" />

                <TextView
                    android:id="@+id/tv_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="+62"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_dropdown"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_dropdown" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan nomor telepon"
                    android:inputType="phone"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_jenisbarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_input_layout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Jenis Barang"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_jenisbarang_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_jenisbarang"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/et_namajenisbarang"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsregular"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan Jenis Barang"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_estimasi_berat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_jenisbarang_input"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Estimasi Berat"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/rg_estimasi_berat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_estimasi_berat"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <!-- Small -->
                <RadioButton
                    android:id="@+id/rb_small"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:buttonTint="@color/bottom_nav_color_selector"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:tag="Small"
                    android:text="Small (Max 5 KG)"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <!-- Medium -->
                <RadioButton
                    android:id="@+id/rb_medium"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:buttonTint="@color/bottom_nav_color_selector"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:tag="Medium"
                    android:text="Medium (Max 50 KG)"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <!-- Large -->
                <RadioButton
                    android:id="@+id/rb_large"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:buttonTint="@color/bottom_nav_color_selector"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:tag="Large"
                    android:text="Large (Max 100 KG)"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_titlebiaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_pesansekarang"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Biaya"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_biaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_above="@id/btn_pesansekarang"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:fontFamily="@font/poppinsbold"
                android:text="Rp. 5000"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btn_pesansekarang"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/button_shape"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Pesan Sekarang"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
